<section class="u-large-vertical-padding">
  <div class="o-container o-container--medium">
    <div class="o-grid">
      <div class="o-grid__cell o-grid__cell--8 u-text-right u-relative">
        <h3>Add a new topic for discussion.</h3>
      </div>
      <div class="o-grid__cell o-grid__cell--8 o-grid__cell--pull-4 u-push-down">
        <div class="c-card c-card--no-shadow u-radius">
          <div class="c-card__content u-push-down">
            <% if @discussion.errors.any? %>
              <ul>
                <% @discussion.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            <% end %>
            <%= form_for @discussion, class: "c-form" do |f| %>
              <div class="c-form__group">
                <%= f.label :title %>
                <%= f.text_field :title, class: "c-form__control" %>
              </div>
              <div class="c-form__group">
                <%= f.label :content %>
                <%= f.text_area :content, class: "c-form__control", rows: 6 %>
              </div>
              <div class="c-form__group">
                <%= f.submit "Add Topic", class: "c-button c-button--accent c-button--block" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
