<div>
  <%= comment.content %><br>
  <%= comment.user.name %>
  <% if user_signed_in? && comment.depth < 5 %>
    <%= form_for([@discussion, @new_comment]) do |f| %>
      <%= f.hidden_field :parent_id, value: comment.id %>
      <%= f.text_field :content %>
      <%= f.submit %>
    <% end %>
  <% end %>
</div>
<hr>
