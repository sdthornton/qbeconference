<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <% if "#{provider}" == "google_oauth2" %>
      <%= link_to omniauth_authorize_path(resource_name, provider), class: "c-button c-button--block c-oauth-button c-oauth-button--google u-text-dark-gray u-display-block u-text-center u-push-down" do %>
        <%= image_tag "google.svg", class: "c-button__image" %>
        <%= controller_name == 'registrations' ? 'Sign up' : 'Log in' %> with Google
      <% end %>
    <% elsif "#{provider}" == "linkedin" %>
      <%= link_to omniauth_authorize_path(resource_name, provider), class: "c-button c-button--block c-oauth-button c-oauth-button--linkedin u-text-white u-display-block u-text-center u-push-down" do %>
        <%= image_tag "linkedin.svg", class: "c-button__image" %>
        <%= controller_name == 'registrations' ? 'Sign up' : 'Log in' %> with LinkedIn
      <% end %>
    <% end %>
  <% end -%>
<% end -%>
